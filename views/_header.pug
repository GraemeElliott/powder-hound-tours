header.header
  nav.nav.nav--tours
    a.nav__el(href='/') All Tours
  .header__logo
    img(src='/img/logo-white.png' alt='Powder Hound Tours')
  nav.nav.nav--user
    if user
     a.nav__el.nav--logout Log Out
     a.nav__el(href='#')
       img.nav__user-img(src=`/img/users/${user.photo}` alt=`Photo of ${user.name}`)
       span= user.name.split(' ')[0]
    else
      a.button.nav__el(href='/login') Login
      a.button.nav__el.nav__el--cta(href='/register') Register